      <div class='box box_ratio_1_1' style="background-image: url('<%= cl_image_path @packer.url_profile_picture, gravity: :face %>')">
      </div>
    </div>
    <div class='information'>
      <p><strong><%= @packer.first_name.upcase %> <%= @packer.last_name.upcase %></strong></p>
    </div>
  </section>

