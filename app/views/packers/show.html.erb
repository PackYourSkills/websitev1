<div id="packer_show">
<!-- Banner Part -->
  <section id="banner_packer" class="banner" style="background-image: linear-gradient(rgba(80,180,125,0.5), rgba(80,180,125,0.5)), url('<%= cl_image_path @packer.url_cover %>')" >
    <div class="banner_content">
      <h1>Your profile</h1>
    </div>
  </section>

<!-- packer_mission_show Part -->
  <section id="summary_packer_show" class="summary_global_show section_green">
