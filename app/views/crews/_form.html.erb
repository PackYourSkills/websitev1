<%= simple_form_for (@crew) do |a| %>
  <%= a.input :name %>
  <%= a.input :mission %>
  <%= a.input :description %>
  <%= a.input :creation_date %>
  <%= a.input :nb_collaborators %>
  <%= a.input :average_age %>
  <%= a.input :percentage_women %>
  <%= a.input :team_description %>
  <%= a.input :percentage_english %>
  <%= a.input :value1 %>
  <%= a.input :value2 %>
  <%= a.input :value3 %>
  <%= a.input :quote %>
  <%= a.input :quote_author %>
  <%= a.input :city %>
  <%= a.input :country, as: :string  %>
  <%= a.input :address %>
  <%= a.input :zip_code %>
  <%= a.input :phone %>
  <%= a.input :skype %>
  <%= a.input :twitter %>
  <%= a.input :facebook %>
  <%= a.input :instagram %>
  <%= a.input :website %>
  <%= a.input :newsletter %>
  <%= a.submit class: "btn btn-secondary" %>
<% end %>
