
<%= simple_form_for (@crew) do |a| %>
  <%= a.input :name %>
  <%= a.input :logo, as: :attachinary %>
  <%= a.input :mission %>
  <%= a.input :description %>
  <%= a.input :creation_date %>
<!-- team -->
  <%= a.input :nb_collaborators %>
  <%= a.input :average_age %>
  <%= a.input :percentage_women %>
  <%= a.input :team_description %>
  <%= a.input :percentage_english %>
  <%= a.input :team_picture, as: :attachinary %>

  <p>What are your main values (3 maximum)</p>
  <%= a.input :value1, label: false %>
  <%= a.input :value2, label: false %>
  <%= a.input :value3, label: false %>
  <p>What is your favorite quote</p>
  <%= a.input :quote, label: false %>
  <%= a.input :quote_author, label: "who said that ?" %>
  <p>How to contact you</p>
  <%= a.input :phone %>
  <%= a.input :skype %>
  <%= a.input :twitter %>
  <%= a.input :facebook %>
  <%= a.input :instagram %>
  <%= a.input :website %>
  <%= a.input :newsletter %>

<!-- Working place -->
  <%= a.input :description_working_place %>
  <%= a.input :working_place_picture, as: :attachinary %>
  <p>Address </p>
  <%= a.input :address %>
  <%= a.input :city %>
  <%= a.input :zip_code %>
  <%= a.input :country %>

  <%= a.input :closest_metro_working_place %>
  <%= a.submit class: "btn btn-secondary" %>
<% end %>
